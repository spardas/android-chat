<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#282828"
            android:textSize="16sp" />
    </RelativeLayout>

    <cn.wildfire.chat.kit.widget.ClearEditText
        android:id="@+id/input_phone"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_gray_round_bg"
        android:drawableLeft="@mipmap/ic_phone_yellow"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textColor="#282828"
        android:textColorHint="#ABABAB"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />

    <cn.wildfire.chat.kit.widget.ClearEditText
        android:id="@+id/input_pwd"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_gray_round_bg"
        android:drawableLeft="@mipmap/ic_lock_yellow"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textColor="#282828"
        android:textColorHint="#ABABAB"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="205dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_splash_login_wx_bg"
        android:gravity="center"
        android:text="立即登录"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>